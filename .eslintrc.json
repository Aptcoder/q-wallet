{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "linebreak-style": 0,
      "import/extensions": "off",
      "comma-dangle": "off"
      
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [ ".js", ".ts"]
        }
      }
    },
    "ignorePatterns": 
    [
      "src/migrations/**/*.ts"
    ]
}
